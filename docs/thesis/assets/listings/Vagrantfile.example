ENV["LC_ALL"] = "en_US.UTF-8"
BOX_DISTRO = "generic/ubuntu1804"
Vagrant.require_version ">= 2.0.0"

Vagrant.configure("2") do |config|

    config.vm.define "test" do |node|
        node.vm.box = BOX_DISTRO

        # node-specific libvirt settings
        node.vm.provider :libvirt do |domain|
            domain.cpus = 2
        end

        # configure a network interface connected to
        # a network with specific address
        node.vm.network :private_network,
            :type => "dhcp",
            :libvirt__network_address => '10.20.30.0'
    end

    # global libvirt settings
    config.vm.provider :libvirt do |libvirt|
        libvirt.driver = "kvm"
        libvirt.storage_pool_name = "default"
        libvirt.memory = 2048
    end
end
